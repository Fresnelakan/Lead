<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dégradé de couleur -->
    <item>
        <shape>
            <gradient
                android:startColor="#FFE4C4"   
                android:endColor="#FFE4C4"     
                android:angle="45" />
            </shape>
        </item>
    <!-- Icône centrale -->
    <item>
        <bitmap
            android:gravity="center"
            android:scaleType="fitCenter" 
            android:src="@drawable/screenspalsh" /> <!-- Nom du fichier PNG -->
    </item>
</layer-list>