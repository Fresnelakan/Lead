<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dégradé de couleur -->
    <item>
        <shape>
            <gradient
                android:startColor="#FFE4C4"  
                android:endColor="#FFE4C4"  
                android:angle="45" />       <!-- Angle du dégradé -->
            </shape>
        </item>
    <!-- Icône centrale -->
    <item>
        <bitmap
            android:gravity="center"
            android:scaleType="fitCenter" 
            android:src="@drawable/screenspalsh"/> <!-- Remplace 'ton_nom_image' par le nom du fichier de ton image -->
    </item>
</layer-list>